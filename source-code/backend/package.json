{
  "name": "backend",
  "version": "1.0.0",
  "description": "A REST API backend for the Web Technologies course project: Webtech's Streetcats",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "TSC_WATCHFILE=PriorityPollingInterval tsc --noEmit --watch",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "CHOKIDAR_USEPOLLING=true tsx watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "imports": {
    "#*": "./src/*"
  },
  "keywords": [
    "streetcats"
  ],
  "author": "Simone Scisciola",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
