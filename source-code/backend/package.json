{
  "name": "backend",
  "version": "1.0.0",
  "description": "A REST API backend for the Web Technologies course project: Webtech's StreetCats",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "prestart": "npm run build",

    "dev": "CHOKIDAR_USEPOLLING=true tsx watch --clear-screen=false src/index.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "TSC_WATCHFILE=PriorityPollingInterval tsc --noEmit --watch",

    "build": "tsc",
    "start": "node dist/index.js",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "keywords": [
    "streetcats"
  ],
  "author": "Simone Scisciola",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
